<!DOCTYPE html>
<html ng-app="DeltaMovie">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Delta Movies</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="//kendo.cdn.telerik.com/2017.2.504/styles/kendo.common.min.css" />
    <link rel="stylesheet" href="//kendo.cdn.telerik.com/2017.2.504/styles/kendo.common-material.min.css" />
    <link rel="stylesheet" href="//kendo.cdn.telerik.com/2017.2.504/styles/kendo.material.min.css" />
    <link rel="stylesheet" href="//kendo.cdn.telerik.com/2017.2.504/styles/kendo.material.mobile.min.css" />
</head>
<body>
    <div class="page-loader-wrapper" style="display: none;">
        <div class="k-loading-image">  </div>
    </div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#/">Delta Movies</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#/">Movie(s)</a></li>
                    <li><a href="#/Movie/Create">Add New Movie</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content body-content-extend">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Delta Movies</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Scripts/angular-sanitize.js"></script>
    <script src="//kendo.cdn.telerik.com/2017.2.504/js/kendo.all.min.js"></script>
    <script src="//kendo.cdn.telerik.com/2017.2.504/js/cultures/kendo.culture.en-IN.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
